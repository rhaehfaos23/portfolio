<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DearManager.Custom.FriendRequest"
             xmlns:i18n="clr-namespace:DearManager;assembly=DearManager"
             Orientation="Horizontal"
             Padding="13, 3">
    <Label x:Name="lblName" VerticalOptions="Center"
                               HorizontalOptions="StartAndExpand"/>
    <Button x:Name="btnCommit" Text="{i18n:Translate txtCustomFriendRequestCommit}" TextColor="White"
                                BackgroundColor="#2216bf" WidthRequest="50"/>
    <Button x:Name="btnReject" Text="{i18n:Translate txtCustomFriendRequestReject}" TextColor="White"
                                BackgroundColor="#da1818" WidthRequest="50"/>
</StackLayout>